"""Shows how https://www.typescriptlang.org/tsconfig/#resolveJsonModule can be used."""

load("@aspect_bazel_lib//lib:testing.bzl", "assert_contains")
load("@aspect_rules_js//js:defs.bzl", "js_test")
load("@aspect_rules_ts//ts:defs.bzl", "ts_config", "ts_project")

ts_config(
    name = "tsconfig",
    src = "tsconfig.json",
    visibility = ["//:__subpackages__"],
)

ts_project(
    name = "ts",
    srcs = [
        "data.json",
        "index.ts",
    ],
    declaration = True,
    resolve_json_module = True,
    visibility = ["//examples/resolve_json_module:__subpackages__"],
)

assert_contains(
    name = "test",
    actual = "index.js",
    expected = """JSON.stringify(data_json_1["default"])""",
)

js_test(
    # Test that the json is available at runtime.
    name = "ts-with-json",
    data = [":ts"],
    entry_point = "index.js",
)
